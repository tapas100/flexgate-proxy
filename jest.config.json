{
  "testEnvironment": "node",
  "coverageDirectory": "coverage",
  "collectCoverageFrom": [
    "src/**/*.js",
    "app.js",
    "!src/**/*.test.js",
    "!src/**/__tests__/**"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  },
  "testMatch": [
    "**/__tests__/**/*.test.js",
    "**/?(*.)+(spec|test).js"
  ],
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/coverage/"
  ],
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
  "verbose": true,
  "bail": false,
  "clearMocks": true,
  "resetMocks": true,
  "restoreMocks": true
}

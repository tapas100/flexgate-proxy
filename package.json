{
  "name": "flexgate-proxy",
  "version": "1.0.0",
  "description": "FlexGate - Production-grade API Gateway with built-in observability, security, and reliability. The flexible alternative to Kong and AWS API Gateway.",
  "main": "app.js",
  "scripts": {
    "start": "node ./bin/www",
    "dev": "NODE_ENV=development nodemon ./bin/www",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "benchmark": "node benchmarks/run.js",
    "benchmark:report": "node benchmarks/report.js",
    "docker:build": "docker build -t flexgate-proxy .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "k8s:deploy": "kubectl apply -f infra/kubernetes/",
    "k8s:delete": "kubectl delete -f infra/kubernetes/"
  },
  "keywords": [
    "api-gateway",
    "proxy",
    "microservices",
    "reverse-proxy",
    "circuit-breaker",
    "rate-limiting",
    "observability",
    "kong-alternative",
    "api-management",
    "flexgate"
  ],
  "author": "Tapas Adhikary <tapas.adhikary@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tapas100/flexgate-proxy.git"
  },
  "homepage": "https://flexgate.dev",
  "bugs": {
    "url": "https://github.com/tapas100/flexgate-proxy/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "axios": "^1.6.5",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "http-errors": "~1.6.3",
    "http-proxy-middleware": "^2.0.6",
    "jade": "~1.11.0",
    "joi": "^17.11.0",
    "js-yaml": "^4.1.0",
    "morgan": "~1.9.1",
    "node-fetch": "^3.3.2",
    "prom-client": "^15.1.0",
    "rate-limit-redis": "^4.2.0",
    "redis": "^4.6.12",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "supertest": "^6.3.4"
  }
}
